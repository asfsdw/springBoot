package com.example.demo2.controller;

import java.util.List;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;

import com.example.demo2.dto.UserDTO;
import com.example.demo2.service.UserService;

import lombok.extern.slf4j.Slf4j;

@Slf4j
@Controller
@RequestMapping("/user")
public class UserController {
	private final UserService userService;
	public UserController(UserService userService) {
		this.userService = userService;
	}
	
	// 회원 목록 보기.
	@GetMapping("/userList")
	public String userListGet(Model model, UserDTO dto,
			@RequestParam(name = "flagSw", defaultValue = "", required = false)String flag) {
		List<UserDTO> vos = userService.getUserList();
		
		model.addAttribute("vos", vos);
		model.addAttribute("dto", dto);
		return "/user/userList";
	}
	// 회원 개별 보기.
	@PostMapping("/userList")
	public String userListPost(RedirectAttributes rttr,
			@RequestParam(name = "mid", defaultValue = "", required = false)String tempMid,
			@RequestParam(name = "flagSw", defaultValue = "", required = false)String flag) {
		log.info("========================================>"+tempMid);
		if(tempMid.equals("")) return "redirectL/user/userList";
		UserDTO dto = userService.getUserMid(tempMid);
		
		rttr.addFlashAttribute("dto", dto);
		rttr.addFlashAttribute("flagSw", flag);
		return "redirect:/user/userList";
	}
	// 회원가입 폼 이동.
	@GetMapping("/userInput")
	public String userInputGet() {
		return "user/userInput";
	}
	// 회원가입.
	@PostMapping("/userInput")
	public String userInputPost(RedirectAttributes rttr, UserDTO dto) {
		if(dto.getMid().equals("")) {
			rttr.addFlashAttribute("message", "아이디를 입력해주세요.");
			return "/user/userInput";
		}
		UserDTO searchDTO = userService.getUserMid(dto.getMid());
		if(searchDTO != null) {
			rttr.addFlashAttribute("message", "중복된 아이디를 사용하셨습니다.");
			return "/user/userInput";
		}
		
		int res = userService.setUserInput(dto);
		if(res != 0) {
			rttr.addFlashAttribute("message", "가입되셨습니다.");
			return "redirect:/user/userList";
		}
		else {
			rttr.addFlashAttribute("message", "잠시 후, 다시 시도해주세요.");
			return "redirect:/user/userList";
		}
	}
	// 회원삭제.
	@ResponseBody
	@PostMapping("/userDelete")
	public int userDeletePost(int idx) {
		return userService.setUserDelete(idx);
	}
	// 회원수정 폼 이동.
	@GetMapping("/userUpdate")
	public String userUpdateGet(Model model, UserDTO dto) {
		dto = userService.getUserMid(dto.getMid());
		model.addAttribute("dto", dto);
		return "user/userUpdate";
	}
	// 회원수정.
	@PostMapping("/userUpdate")
	public String userUpdatePost(RedirectAttributes rttr, UserDTO dto) {
		int res = userService.setUserUpdate(dto);
		if(res != 0) {
			rttr.addFlashAttribute("message", "회원 정보가 수정되었습니다.");
			return "redirect:/user/userList";
		}
		else {
			rttr.addFlashAttribute("dto", dto);
			rttr.addFlashAttribute("message", "잠시 후, 다시 시도해주세요.");
			return "user/userUpdate";
		}
	}
}
